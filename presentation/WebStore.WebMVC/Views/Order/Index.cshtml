@model OrderModel

@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <th scope="col">№</th>
        <th scope="col">Автор</th>
        <th scope="col">Название</th>
        <th scope="col"><div style="margin-left:50%">Количество</div></th>
        <th scope="col">Цена</th>
        <th scope="col">Редактировать</th>
    </thead>
    <tbody>
        @for(int i = 0; i<Model.Item.Length; i++)
        {
            <tr>
                <td class="text-right">@(i + 1)</td>
                <td>@Model.Item[i].Author</td>
                <td>@Model.Item[i].Title</td>
                <td>
                    <div style="width: 20%; display: inline-block;">
                        <form action="@Url.Action("UpdateItem", "Order")" method="post">
                            <input type="hidden" name="id" value="@Model.Item[i].BookId" />
                            <input type="hidden" name="count" value="-1" />
                            <button class="btn btn-success" type="submit">-</button>
                        </form>
                    </div>
                    <div style="width: 20%; display: inline-block;">
                        <form action="@Url.Action("UpdateItem", "Order")" method="post">
                            <input type="hidden" name="id" value="@Model.Item[i].BookId" />
                            <input type="hidden" name="count" value="1" />
                            <button class="btn btn-success" type="submit">+</button>
                        </form>
                    </div>
                    <div style="width: 50%; display: inline-block;">
                        <div style="margin-left:50%">@Model.Item[i].Count</div>
                    </div>
                </td>
                <td class="text-right">@Model.Item[i].Price</td>
                <td>
                    <form action="@Url.Action("DeleteItem", "Order")" method="post">
                        <input type="hidden" name="id" value="@Model.Item[i].BookId" />
                        <button class="btn btn-success" type="submit">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого</td>
            <td><div style="margin-left:69%">@Model.TotalCount</div></td>
            <td class="text-right">@Model.TotalPrice</td>
            <td></td>
        </tr>
    </tfoot>
</table>

<form action="@Url.Action("SendConfirmationCode", "Order")" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="cellPhone">Мобильный телефон</label>
        <input type="text" class="form-controle" name="cellPhone" value="+79876543210" />
        @if (Model.Errors.ContainsKey("cellPhone"))
        {
            <small class="form-text text-danger">@Model.Errors["cellPhone"]</small>
        }
    </div>
    <button class="btn btn-success" type="submit">Отправить код</button>
</form>
